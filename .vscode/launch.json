    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch view-change.fault-tolerance integration tests",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/code/go/0chain.net/conductor/conductor",
            "cwd": "${workspaceFolder}",
            "args": [
                "-config", "./docker.local/config/conductor.config.yaml",
                "-tests", "./docker.local/config/conductor.view-change.fault-tolerance.*.yaml"
            ]
        },
        {
            "name": "Launch no-view-change.fault-tolerance integration tests",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/code/go/0chain.net/conductor/conductor",
            "cwd": "${workspaceFolder}",
            "args": [
                "-config", "./docker.local/config/conductor.config.yaml",
                "-tests", "./docker.local/config/conductor.no-view-change.fault-tolerance.yaml"
            ]
        },
        {
            "name": "Debug sharder",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/code/go/0chain.net/sharder/sharder",
            "cwd": "${workspaceFolder}/docker.local/sharder_debug",
            "buildFlags": "--tags=bn256,development",
            "args": ["-deployment_mode", "0",
                "-keys_file", "../config/b0snode1_keys.txt",
                "-minio_file", "../config/minio_config.txt"]
        },
        {
            "name": "Debug miner",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/code/go/0chain.net/miner/miner",
            "cwd": "${workspaceFolder}/docker.local/miner_debug",
            "buildFlags": "--tags=bn256,development",
            "args": ["-deployment_mode", "0",
                "-keys_file", "../config/b0mnode1_keys.txt",
                "-magic_block_file", "../config/b0magicBlock_4_miners_2_sharders.json"]
        },
    ]
}